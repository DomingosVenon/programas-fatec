algoritmo "Sucessor e antecessor"
// Função :
// Autor :
// Data : 22/08/2016
// Seção de Declarações 

var
   n1,x,y: real

inicio
// Seção de Comandos 

escreval ("Digite um numero :")
leia(n1)

x<-n1-1
y<-n1+1

escreva ("Seu Antecessor é:")
escreval(x)

escreva ("Seu Sucessor é:")
escreval(y)


fimalgoritmo
